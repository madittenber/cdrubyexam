<!DOCTYPE html>
<html>
<head>
  <title>Ruby/Rails Exam</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
        <div class="topbar">
            <div class="topbox">
                CodingDojo Ruby Exam Playlist
            </div>
            <div class="box">
            
            <% if current_user %>

  <form action="/sessions/<%=current_user.id%>" method="post">
  <a href="/songs">All Songs</a>
  
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="delete">
   <a href="/users/<%=current_user.id%>">My Playlist</a>  <input type="submit" value="Log Out"></form>
<% end %></div>
        </div>

<% if flash[:errors] %>
<div class="errors">
<div class="spacer"></div>

<ul>
  <% flash[:errors].each do |e| %>
    <li><%= e %></li>
  <% end %>
</ul>
</div>

<% end %>



<%= yield %>
<div class="spacer"></div>
</body>
</html>
